<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aenima.android.popularmovies.MovieDetailActivity"
    tools:showIn="@layout/activity_movie_detail"
    android:id="@+id/movie_detail_sv"
    app:behavior_overlapTop="50dp"

    >
    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        >
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/main_poster_iv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:id="@+id/vote_avg_ll"
            android:layout_margin="70dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/main_poster_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/movie_rating_rb"
                android:max="10"
                android:numStars="10"
                android:theme="@style/RatingBarPerson"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"  />

            <TextView
                android:id="@+id/vote_avg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/vote_avg_ll"
            app:layout_constraintStart_toStartOf="@id/vote_avg_ll"
            android:id="@+id/release_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/main_poster_iv"
            android:id="@+id/movie_overview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/movie_overview"/>
        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/movie_overview_tv"
            android:id="@+id/movie_original_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/movie_original_title"/>
   </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
